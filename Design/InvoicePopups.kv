<InvoicePayment>:
    id:poppop
    size_hint: .5, .6
    auto_dismiss: False
    title: 'View'
    StackLayout:
        id: inputs
        orientation: 'lr-tb'
        Label:
            size_hint: 0.5, None
            height: '32dp'
            text: 'Invoice Number: '

        TextInput:
            size_hint: 0.5, None
            height: '32dp'
            multiline: False
            disabled: True
        Label:
            size_hint: 0.5, None
            height: '32dp'
            text: 'Customer Name: '

        TextInput:
            size_hint: 0.5, None
            height: '32dp'
            multiline: False
            disabled: True
        Label:
            size_hint: 0.5, None
            height: '32dp'
            text: 'Customer Order Number: '

        TextInput:
            size_hint: 0.5, None
            height: '32dp'
            multiline: False
            disabled: True
        Label:
            size_hint: 0.5, None
            height: '32dp'
            text: 'Invoice Date: '

        TextInput:
            size_hint: 0.5, None
            height: '32dp'
            multiline: False
            disabled: True
        Label:
            size_hint: 0.5, None
            height: '32dp'
            text: 'Status: '

        TextInput:
            size_hint: 0.5, None
            height: '32dp'
            multiline: False
            disabled: True
        Label:
            size_hint: 0.5, None
            height: '32dp'
            text: 'Remaining Payment Left: '

        TextInput:
            size_hint: 0.5, None
            height: '32dp'
            multiline: False
            disabled: True
        Label:
            size_hint: 0.5, None
            height: '32dp'
            text: 'Check Number: '

        TextInput:
            size_hint: 0.5, None
            height: '32dp'
            multiline: False

        Label:
            size_hint: 0.5, None
            height: '32dp'
            text: 'Check Amount: '

        TextInput:
            size_hint: 0.5, None
            height: '32dp'
            multiline: False

        Label:
            size_hint: 1, None
            height: '10dp'
            text: ''
        Button:
            size_hint: 0.5, None
            height: '32dp'
            text: 'Add'
            on_press: root.add_payment()
            on_release: root.dismiss()
        Button:
            size_hint:0.5, None
            height: '32dp'
            text: 'Dismiss'
            on_press: root.dismiss()

<InvoiceError>:
