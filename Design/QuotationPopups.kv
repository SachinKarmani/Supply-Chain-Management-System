        TextInput:
            size_hint: 0.5, None
            height: '32dp'
            multiline: False
        TextInput:
            size_hint: 0.5, None
            height: '32dp'
            multiline: False
        TextInput:
            size_hint: 0.5, None
            height: '32dp'
            multiline: False
        TextInput:
            size_hint: 0.5, None
            height: '32dp'
            multiline: False
        TextInput:
            size_hint: 0.5, None
            height: '32dp'
