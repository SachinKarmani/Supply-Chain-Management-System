#:kivy 1.7.0
<QuotationSearch>:
    id:poppop
    size_hint: .5, .4
    auto_dismiss: False
    title: 'Search'
    StackLayout:
        id: bpop
        orientation: 'lr-tb'
        Label:
            text: 'Quotation Number'
            size_hint: 0.5, None
            height: '32dp'
        TextInput:
            id:ID
            size_hint: 0.5, None
            height: '32dp'
            multiline: False
        Label:
            text: 'Customer Name'
            size_hint: 0.5, None
            height: '32dp'
        TextInput:
            id: CustomerName
            size_hint: 0.5, None
            height: '32dp'
            multiline: False

        Label:
            text: 'After (DD,MM,YYYY)'
            size_hint: 0.5, None
            height: '32dp'
        TextInput:
            id:Day_A
            size_hint: 0.15, None
            height: '32dp'
            multiline: False
        TextInput:
            id:Month_A
            size_hint: 0.15, None
            height: '32dp'
            multiline: False
        TextInput:
            id:Year_A
            size_hint: 0.2, None
            height: '32dp'
            multiline: False
        Label:
            text: 'Before (DD,MM,YYYY)'
            size_hint: 0.5, None
            height: '32dp'
        TextInput:
            id:Day_B
            size_hint: 0.15, None
            height: '32dp'
            multiline: False
        TextInput:
            id:Month_B
            size_hint: 0.15, None
            height: '32dp'
            multiline: False
        TextInput:
            id:Year_B
            size_hint: 0.2, None
            height: '32dp'
            multiline: False

        Button:
            size_hint: 0.5, None
            height: '32dp'
            text: 'Search'
            on_press: root.apply_search()
            on_release: root.dismiss()
        Button:
            size_hint: 0.5, None
            height: '32dp'
            text: 'Dismiss'
            on_release: root.dismiss()


<QuotationInsert>:
    size_hint: .5, .6
    auto_dismiss: False
    title: 'Add'
    StackLayout:
