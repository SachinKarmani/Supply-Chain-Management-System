# File name: layouts.kv 
#:kivy 1.7.0
<Payment>:
    orientation: 'vertical'
    search_results: search_results_list
    StackLayout:
        id: inputs
        orientation:'lr-tb'
        size_hint:1,0.5
        padding:50,15
        spacing:0

        Label:
            text: ''
            size_hint: 0.666, 0.3

        Button:
            id:search
            text: 'Search'
            size_hint: 0.333, 0.3
            on_release: root.call_popup(self.text)


        Label:
            font_size:'15sp'
            text:'Check Number'
            size_hint: 0.1666,0.5
        Label:
            font_size:'15sp'
            size_hint: 0.1666,0.5
            text:'Company'
        Label:
            font_size:'15sp'
            size_hint: 0.1966,0.5
            text:'Invoice '
        Label:
            font_size:'15sp'
            size_hint: 0.1666,0.5
            text:'CO Number'
        Label:
            font_size:'15sp'
            size_hint: 0.1666,0.5
            text:'Amount'
        Label:
            font_size:'15sp'
            size_hint: 0.1366,0.5
            text:'Date'

    ListView:
        id: search_results_list
        size_hint_x: 0.99
        pos_hint: {'x':(self.parent.width - self.width)/2000}
        adapter:
            ListAdapter(
            data=root.retreive_data(),
            args_converter=root.args_converter,
            selection_mode='multiple',
            cls=CompositeListItem)


<PaymentSearch>:
    id:poppop
    size_hint: .5, .5
    auto_dismiss: False
    title: 'Search'
    StackLayout:
        id: bpop
        orientation: 'lr-tb'
        Label:
            text: 'Check Number'
            size_hint: 0.5, None
            height: '32dp'
        TextInput:
            id:CheckNumber
            size_hint: 0.5, None
            height: '32dp'
            multiline: False
        Label:
            text: 'Invoice Number'
            size_hint: 0.5, None
            height: '32dp'
        TextInput:
            id:InvoiceNumber
            size_hint: 0.5, None
            height: '32dp'
            multiline: False
        Label:
            text: 'Customer Name'
            size_hint: 0.5, None
            height: '32dp'
        TextInput:
            id:CustomerName
            size_hint: 0.5, None
            height: '32dp'
            multiline: False
        Label:
            text: 'Customer Order Number'
            size_hint: 0.5, None
            height: '32dp'
        TextInput:
            id:CustomerOrderNumber
            size_hint: 0.5, None
            height: '32dp'
            multiline: False
        Label:
            text: 'After (DD,MM,YYYY)'
            size_hint: 0.5, None
            height: '32dp'
        TextInput:
            id:Day_A
            size_hint: 0.15, None
            height: '32dp'
            multiline: False
        TextInput:
            id:Month_A
            size_hint: 0.15, None
            height: '32dp'
            multiline: False
        TextInput:
            id:Year_A
            size_hint: 0.2, None
            height: '32dp'
            multiline: False
        Label:
            text: 'Before (DD,MM,YYYY)'
            size_hint: 0.5, None
            height: '32dp'
        TextInput:
            id:Day_B
            size_hint: 0.15, None
            height: '32dp'
            multiline: False
        TextInput:
            id:Month_B
            size_hint: 0.15, None
            height: '32dp'
            multiline: False
        TextInput:
            id:Year_B
            size_hint: 0.2, None
            height: '32dp'
            multiline: False

        Button:
            size_hint: 0.5, None
            height: '32dp'
            text: 'Search'
            on_press: root.apply_search()
            on_release: root.dismiss()
        Button:
            size_hint: 0.5, None
            height: '32dp'
            text: 'Dismiss'
            on_release: root.dismiss()