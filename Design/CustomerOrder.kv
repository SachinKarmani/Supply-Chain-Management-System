# File name: layouts.kv 
#:kivy 1.7.0
<CustomerOrder>:
    orientation: 'vertical'
    search_results: search_results_list
    StackLayout:
        id: inputs
        orientation:'lr-tb'
        padding:50,15
        spacing:0

        Button:
            id:add
            text: 'Add'
            size_hint: 0.5, 0.3
            on_release: root.call_popup(self.text)

        Button:
            id:search
            text: 'Search'
            size_hint: 0.5, 0.3
            on_release: root.call_popup(self.text)

        Button:
            id:invoice
            text: 'Create Invoice'
            size_hint: 0.5, 0.3
            on_release: root.call_popup(self.text)
            disabled:True

        Button:
            id:view
            text: 'View'
            size_hint: 0.5, 0.3
            disabled:True
            on_release: root.call_popup(self.text)

        Label:
            font_size:'15sp'
            text:'CO Number'
            size_hint: 0.2,0.5
        Label:
            font_size:'15sp'
            size_hint: 0.26,0.5
            text:'Name'
        Label:
            font_size:'15sp'
            size_hint: 0.15,0.5
            text:'Amount'
        Label:
            font_size:'15sp'
            size_hint: 0.21,0.5
            text:'Date'
        Label:
            font_size:'15sp'
            size_hint: 0.18,0.5
            text:'Status'

    ListView:
        id: search_results_list
        size_hint_x: 0.99
        pos_hint: {'x':(self.parent.width - self.width)/2000}
        adapter:
            ListAdapter(
            data=root.retreive_data(),
            args_converter=root.args_converter,
            selection_mode='multiple',
            cls=CompositeListItem)




